{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/schema.json",
  "package": {
    "productName": "Hudson",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:4000",
    "distDir": "../priv/static"
  },
  "tauri": {
    "windows": [],
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src http://127.0.0.1:* http://localhost:*"
    },
    "bundle": {
      "identifier": "com.hudson.app",
      "icon": ["icons/icon.png"],
      "externalBin": ["../burrito_out/hudson_macos_arm"],
      "resources": [],
      "targets": "all"
    }
  }
}
