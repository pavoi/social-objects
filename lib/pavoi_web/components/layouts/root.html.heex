<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" content="#FFFFFF" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#1A1A1A" media="(prefers-color-scheme: dark)" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Pavoi" suffix=" Â· Live Session Controller">
      {assigns[:page_title]}
    </.live_title>
    <link rel="icon" type="image/x-icon" href={~p"/favicon.ico"} />
    <link rel="icon" type="image/png" sizes="16x16" href={~p"/images/favicon-16x16.png"} />
    <link rel="icon" type="image/png" sizes="32x32" href={~p"/images/favicon-32x32.png"} />
    <%!-- FOUC Prevention: Apply theme class before styles load --%>
    <script>
      (function() {
        const getTheme = () => {
          const saved = localStorage.getItem('theme');
          if (saved === 'light' || saved === 'dark') return saved;
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        };
        const theme = getTheme();
        document.documentElement.classList.add(theme);
        document.documentElement.setAttribute('data-theme', theme);
        // Set theme-color for browser chrome (iOS Safari status bar, etc.)
        const themeColor = theme === 'dark' ? '#1A1A1A' : '#FFFFFF';
        document.querySelector('meta[name="theme-color"]')?.setAttribute('content', themeColor);
      })();
    </script>
    <link phx-track-static rel="stylesheet" href={~p"/assets/js/app.css"} />
    <script defer phx-track-static type="module" src={~p"/assets/js/app.js"}>
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
